<h1>Listing pages</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Slug</th>
    <th>Content</th>
    <th>Company</th>
  </tr>

<% for page in @pages %>
  <tr>
    <td><%=h page.name %></td>
    <td><%=h page.slug %></td>
    <td><%=h page.content %></td>
    <td><%=h page.company_id %></td>
    <td><%= link_to 'Show', page %></td>
    <td><%= link_to 'Edit', edit_page_path(page) %></td>
    <td><%= link_to 'Destroy', page, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

