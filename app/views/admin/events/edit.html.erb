<h1>Editing occupancy</h1>

<% form_for(@event, :url => {:controller => 'admin/events', :action => 'update'}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 4 %>
  </p>
  <p>
   <%= f.label :property_id %><br />
   <%= f.select :property_id, @properties.map{|p| [p.name, p.id]} %>
  </p>
  <p>
    <%= f.label :starts_at %><br />
    <%= f.datetime_select :starts_at %>
  </p>
  <p>
    <%= f.label :ends_at %><br />
    <%= f.datetime_select :ends_at %>
  </p>
  <p>
    <%= f.label :owner_id, "Occupancy administrative contact" %><br />
    <%= f.select :owner_id, @property.members.map{|m|[m.name, m.id]} %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @event %> |
<%= link_to 'Back', events_path %>
