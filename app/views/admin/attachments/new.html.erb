<h1>New attachment</h1>

<% form_for @attachment, :url => {:controller => 'admin/attachments', :action => 'create'}, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>

  <%= f.file_field :attached %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <% if !@properties.blank? %>
     <p>
       <%= f.label :property_id %><br />
       <%= f.select :property_id, @properties.map{|p| [p.name, p.id]} %>
     </p>
  <% end %>
  <p>
    <%= f.label :featured %><br />
    Yes: <%= radio_button_tag :featured, true %><br />
    No: <%= radio_button_tag :featured, false, :checked => true %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', admin_property_attachments_path %>
