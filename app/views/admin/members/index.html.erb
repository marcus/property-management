<% if !@property.members.blank? %>
  <% for member in @property.members %>
    <strong><%= member.name %></strong>
    <% form_remote_for member.role_for_context(@property), :url => {:controller => 'admin/members', :action => 'update'} do |f|  %>
      <%= select_tag :role, options_for_select( Role.for_context("Property").map{|r|[r.friendly_name, r.id]},
                            member.role_for_context(@property).id ) %>
    <% end %>
    <br />
  <% end %>
<% else %>
  
<% end %>
