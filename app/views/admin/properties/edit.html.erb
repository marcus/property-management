<% form_for(@property, :url => {:controller => 'admin/properties', :action => 'update'}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :rows => 6, :cols => 50 %>
  </p>

  <p>
    <%= f.label :location %> (e.g. "100 Main Street, Seattle, WA")<br />
    <%= f.text_field :location, :size => 50 %>
  </p>
  <p>
     <%= f.submit "Update" %>
  </p>
<% end %>