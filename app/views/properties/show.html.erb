<%= javascript_include_tag 'builder' %>
<%= stylesheet_link_tag 'lightbox' %>
<%= stylesheet_link_tag 'events' %>

<div id="property_header">
   <h2><%=h @property.name %></h2>
</div>

<div id="property_description">
   <p><%= h @property.description %></p>
</div>

<div id="property_images">
<% if !@property.attachments.blank? %>
   <ul class="property_image">
  <% for attachment in @property.attachments %>
    <li>
      <% if attachment.attached_content_type.include?("image")%>
         <%= lightbox_image_tag(attachment.attached.url(:small), attachment.attached.url(:large), "album name",
                                                        {:class=>"images"}, :title => attachment.description) %>
         <br />
         <p class="property_image_name"><%= attachment.name %></p>
      <% end %>
   </li>
  <% end %>
  </ul>
<% else %>
  
<% end %>

</div>
<div style="clear:both;"></div>
<div id="events_list">
  <%= render :partial => "/events/list", :locals => {:events_list => @events_list} %>
</div>

<div id="calendar_display">
   <%= render :partial => 'events/calendar' %>
</div>
<div style="clear:both;"></div>